<idea-plugin version="2">
  <id>com.cooperconrad.storytellerintellij</id>
  <name>Storyteller Intellij Plugin</name>
  <version>1.0</version>
  <vendor email="support@yourcompany.com" url="http://www.storytellersoftware.com">Storyteller
    Software</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <group id="StorytellerIntellij.StorytellerMenu" text="_Storyteller"
           description="Storyteller Menu">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action class="AddDeveloperAction" id="StorytellerIntellij.AddDeveloper" text="Add Developer"/>
    </group>
  </actions>

</idea-plugin>